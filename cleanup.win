#!/bin/sh

set -ex

# Only on CI/CD
if [ "$CI" != "true" ]; then
  exit 0
fi

# For CI/CD: only compress if expansion is possible too
if which xz > /dev/null; then
  if [ -d .git ]; then git clean -fdx src; fi
  cd src
  find duckdb -type f | egrep '[.](cc|cpp|h|hpp)$' | xargs dos2unix
  tar cvJf duckdb.tar.xz duckdb
  rm -rf duckdb
fi
